<Window x:Class="KingsAndQueensHat.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Generate" HorizontalAlignment="Left" Margin="14,47,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Faster" HorizontalAlignment="Left" Margin="14,16,0,0" VerticalAlignment="Top"/>
        <Label Content="Better" HorizontalAlignment="Left" Margin="141,16,0,0" VerticalAlignment="Top"/>
        <Slider HorizontalAlignment="Left" Margin="61,20,0,0" VerticalAlignment="Top" Width="75"/>
        <ItemsControl ItemsSource="{Binding Teams}" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" ItemsSource="{Binding Players}" RowStyle="{StaticResource HighlightRow}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Gender" Binding="{Binding Gender}"/>
                            <DataGridTextColumn Header="GameScore" Binding="{Binding GameScore}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
